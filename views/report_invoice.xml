<?xml version="1.0" encoding="utf-8"?>
<openerp>
<data>

    <template id="report_invoice_document_inherit" inherit_id="account.report_invoice_document">

      <xpath expr="//div/h2/span[1]" position="replace">
        <span t-if="o.type == 'out_invoice' and (o.state == 'open' or o.state == 'paid')">Invoice</span>
      </xpath>
      <xpath expr="//div/h2/span[5]" position="replace">
        <span t-if="o.type == 'out_refund'">Refund</span>
      </xpath>
      <xpath expr="//div/h2/span[6]" position="replace">
        <span t-if="o.type == 'in_refund'">Vendor Refund</span>
      </xpath>
      <xpath expr="//div/h2/span[7]" position="replace">
        <span t-if="o.type == 'in_invoice'">Vendor Bill</span>
      </xpath>
      
      <xpath expr="//div[@class='row mt32 mb32']" position="before">
        <t t-if="o.journal_id.sequence_id.use_dian_control">
          <t t-foreach="o.journal_id.sequence_id.dian_resolution_ids[0]" t-as="l">
            <strong>Fecha de resolución:</strong>
            <p t-field="l.date_from" />
            <strong>Número de resolución:</strong>
            <p t-field="l.resolution_number" />
            <strong>Resolución válida desde </strong><p t-field="l.number_from" /><strong>hasta </strong><p t-field="l.number_to" />
          </t>
        </t>
      </xpath>

      <xpath expr="//div[@t-if='o.tax_line_ids']" position="replace">
            <div class="row" t-if="o.tax_line_ids and o.at_least_one_tax_group_enabled()">
                <div class="col-xs-6">
                    <table class="table table-condensed">
                        <thead>
                            <tr>
                                <th>Tax</th>
                                <th class="text-right">Base</th>
                                <th class="text-right">Amount</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr t-foreach="o.tax_line_ids" t-as="t">
                                <td><span t-field="t.name"/></td>
                                <td class="text-right">
                                    <span t-field="t.base"
                                        t-field-options='{"widget": "monetary", "display_currency": "o.currency_id"}'/>
                                </td>
                                <td class="text-right">
                                    <span t-field="t.amount"
                                        t-field-options='{"widget": "monetary", "display_currency": "o.currency_id"}'/>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </xpath>

    </template>

</data>
</openerp>
